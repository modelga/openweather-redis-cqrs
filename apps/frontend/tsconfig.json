{
  "extends": "shared/config",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["dom", "es2016"],
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "compiled",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "files": ["app/index.ts"],
  "include": ["**/*.ts","**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
